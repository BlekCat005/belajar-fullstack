    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Mendaftarkan Pengguna Baru",
        "description": "Endpoint untuk membuat akun pengguna baru.",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {}
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login Pengguna",
        "description": "Endpoint untuk autentikasi dan mendapatkan token.",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {}
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Masukkan token JWT yang didapat setelah login"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "object"
          },
          "properties": {
            "type": "object",
            "properties": {
              "email": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "description": {
                    "type": "string",
                    "example": "Email pengguna yang terdaftar."
                  },
                  "example": {
                    "type": "string",
                    "example": "user@example.com"
                  }
                }
              },
              "password": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "description": {
                    "type": "string",
                    "example": "Password pengguna."
                  },
                  "example": {
                    "type": "string",
                    "example": "password123"
                  }
                }
              }
            }
          },
          "required": {
            "type": "array",
            "example": [
              "email",
              "password"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "object"
          },
          "properties": {
            "type": "object",
            "properties": {
              "fullname": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "example": {
                    "type": "string",
                    "example": "Budi Santoso"
                  }
                }
              },
              "username": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "example": {
                    "type": "string",
                    "example": "budisan"
                  }
                }
              },
              "email": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "example": {
                    "type": "string",
                    "example": "budi@example.com"
                  }
                }
              },
              "password": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "example": "string"
                  },
                  "example": {
                    "type": "string",
                    "example": "PasswordSuperAman123!"
                  }
                }
              }
            }
          },
          "required": {
            "type": "array",
            "example": [
              "fullname",
              "username",
              "email",
              "password"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}